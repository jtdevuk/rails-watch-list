<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 m-3">
    <h1 class="text-center m-3">Add a new movie to this list</h1>
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.input :comment %>
        <%= f.association :movie %>
        <%= f.submit %>
      <% end %>        
    </div>
  </div>
</div>