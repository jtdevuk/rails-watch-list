<div class="jumbotron text-white d-flex flex-column justify-content-center">
  <h1 class="text-center">Save your favourite movies</h1>
</div>
<div class="container">
<h3 class="m-3 text-center">My Lists</h3>
<% if @lists.any? %>
  <div class="row justify-content-around">
    <% @lists.each do |list| %>
    <div class="card col-12 col-lg-5 text-center m-2 p-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill if list.photo.attached?%>')">
      <%= link_to list.name, list_path(list), class: "text-light" %>
    </div>
  <% end %>
  </div>
<% else %>
  There are no lists!
<% end %>
  <div class="text-center">
    <%= link_to "Add a new list", new_list_path, class: "btn btn-warning m-3" %>
  </div>
</div>