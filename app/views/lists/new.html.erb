<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 m-3">
      <h1 class="text-center m-3">Create a new list</h1>
      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>